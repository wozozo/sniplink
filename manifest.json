{
  "manifest_version": 3,
  "name": "SnipLink - Clean URL Copier",
  "short_name": "SnipLink",
  "version": "1.0.0",
  "description": "Remove tracking parameters from URLs to create clean, shareable links with one click",
  "author": "Yoichi Fujimoto",
  "homepage_url": "https://github.com/wozozo/sniplink",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "contextMenus",
    "notifications",
    "offscreen"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open SnipLink popup"
    },
    "clean-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Clean current tab URL"
    }
  }
}